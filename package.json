{
  "name": "transformer-viz",
  "version": "1.0.0",
  "description": "Apple-inspired transformer architecture visualizer",
  "main": "server/index.js",
  "scripts": {
    "server": "nodemon server/index.ts",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm run build",
    "build:server": "tsc server/index.ts --outDir dist --esModuleInterop --resolveJsonModule --skipLibCheck",
    "start": "node dist/server/index.js"
  },
  "keywords": ["transformer", "visualization", "ml", "ai"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "mongoose": "^8.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
